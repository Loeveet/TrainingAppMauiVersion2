<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingAppMauiVersion2.Views.LoggedInPage"
             Title="LoggedInPage">
    <ScrollView>

        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label 
                Text="Congratulations, you are now logged in to the Training App!"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Button
                Text="Existing training programs"
                Clicked="OnClickedExistingTrainingProgramsPage"/>
            <Button
                Text="Create training programs"
                Clicked="OnClickedCreateTrainingProgramPage"/>
            <Button
                Text="Other exercises"
                Clicked="OnClickedOtherExercisesPage"/>
            <Button
                Text="Search for other exercises"
                Clicked="OnClickedSearchForOtherExercisesPage"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>