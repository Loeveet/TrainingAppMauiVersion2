<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingAppMauiVersion2.Views.SeeExercisesInProgramPage"
             xmlns:viewmodel="clr-namespace:TrainingAppMauiVersion2.ViewModels"
             x:DataType="viewmodel:SeeExercisesInProgramViewModel"
             Title="SeeExercisesInProgramPage"
             NavigationPage.HasBackButton="False">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <ListView ItemsSource="{Binding Exercises}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Exercise.Name}" />
                                <Label Text="{Binding ChoosenWeight}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </HorizontalStackLayout>
        <Button
            Text="Back"
            Clicked="OnBackClicked"/>
    </VerticalStackLayout>
</ContentPage>